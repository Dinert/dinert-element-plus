{
    "compilerOptions": {
      "baseUrl": ".",
      "jsx": "preserve",
      "strict": true,
      "target": "ES2015",
      "module": "ESNext",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "lib": ["esnext", "dom"],
      "paths": {
         "@/*": ["packages/*"],
      },
    },
    "exclude": ["node_modules"],
    "references": [{ "path": "./tsconfig.node.json" }],
    "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue"],
  }