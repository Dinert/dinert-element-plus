{
    "compilerOptions": {
      "noImplicitAny": false,
      "baseUrl": ".",
      "jsx": "preserve",
      "strict": true,
      "target": "ES2015",
      "module": "ESNext",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "lib": ["esnext", "dom"],
      "paths": {
         "@packages/*": ["packages/*"],
      },
    },
    "exclude": ["node_modules"],
    "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.vue", "packages/**/*.tsx", "docs/**/*.ts"],
  }